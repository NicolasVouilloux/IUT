<Window Name="WNDMainWindow" x:Class="QuizzIUT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzIUT"
        mc:Ignorable="d"
        Title="MainWindow" Height="412" Width="800" Loaded="WNDMainWindow_Loaded" Background="DarkGray" MinWidth="600" MinHeight="400">
    <Grid>
        <Label Name="LBLtitle" Content="Question for me" Margin="116,28,0,0" VerticalAlignment="Top" Height="74" FontSize="40" HorizontalAlignment="Left" Width="512" />
        <Label Name="LBLtitlehided" Content="Cause no friends to use it" Margin="405,65,0,0" VerticalAlignment="Top" Height="20" FontSize="5" HorizontalAlignment="Left" Width="124" />
        <Label Name="LBLQuestion" Content="insert DA QUESTION FOR DA CHAMPION" HorizontalAlignment="Left" Margin="139,89,0,0" VerticalAlignment="Top" Height="37" Width="382" FontSize="20" Grid.Column="1" />
        <TextBox Name="TBXResponse" HorizontalAlignment="Left" Height="41" Margin="173,141,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="238" Grid.Column="1" />
        <Button Name="BTNValidate" Content="Confirm" HorizontalAlignment="Left" Margin="425,142,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.63,-0.175" Width="66" Click="BTNValidate_Click" Grid.Column="1"/>
        <Label Name="LBLCorrectAnswers" Content="Correct answers : " HorizontalAlignment="Left" Margin="139,198,0,0" VerticalAlignment="Top" Height="23" Width="93" FontSize="10" Grid.Column="1" />
        <Label Name="LBLIncorrectAnswers" Content="Incorrect answers : " HorizontalAlignment="Left" Margin="139,226,0,0" VerticalAlignment="Top" Height="23" Width="93" FontSize="10" Grid.Column="1" />
        <Label Name="LBLCorrectAnswersvalues" Content="0" HorizontalAlignment="Left" Margin="237,198,0,0" VerticalAlignment="Top" Height="23" Width="83" FontSize="10" Grid.Column="1" />
        <Label Name="LBLIncorrectAnswersvalues" Content="0" HorizontalAlignment="Left" Margin="237,226,0,0" VerticalAlignment="Top" Height="23" Width="103" FontSize="10" Grid.Column="1" />
        <Slider Name="SDRNightMode" Margin="448,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" ValueChanged="SDRNightMode_ValueChanged_1" Maximum="1" Grid.Column="1"/>
        <Image Name="sun"  HorizontalAlignment="Left" Height="35" Margin="413,6,0,0" VerticalAlignment="Top" Width="26" Source="/sun.png" RenderTransformOrigin="0.293,0.2" Grid.Column="1"/>
        <Image Name="moon" Height="26" Margin="525,8,0,0" VerticalAlignment="Top" Source="/moon.png" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="21" Grid.Column="1">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-8.361"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Name="moonmodi" Margin="525,8,254,366" Source="/moon-modified.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-8.637"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Image Name="sunmodi" Margin="413,6,361,364" Source="/sun-modified.png" Stretch="Fill"/>

    </Grid>
</Window>
